{
  "name": "real-demo-app",
  "version": "1.0.1",
  "private": true,
  "description": "",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/ademkoc/real-demo-app.git"
  },
  "license": "MIT",
  "author": "Adem KoÃ§",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "pnpm lint && rimraf ./dist",
    "build": "tsc",
    "check-updates": "pnpm outdated --recursive --long",
    "start": "node --import=tsx --env-file=.env src/server.ts",
    "dev": "pnpm typecheck & pnpm lint & node --import=tsx --watch --watch-preserve-output --env-file=.env src/server.ts",
    "lint": "eslint && jsonschema lint ./schemas",
    "typecheck": "tsc --watch --preserveWatchOutput --noEmit",
    "generate-types": "node --import=tsx bin/generate-api-types.mjs",
    "lint:fix": "eslint --fix",
    "migration:create": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:create",
    "migration:down": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:down",
    "migration:up": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:up",
    "release": "semantic-release",
    "test": "node --import=tsx --test ./test/*.ts"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "breaking",
              "release": "major"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Chores"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "refactor",
                "section": "Refactors"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@adonisjs/health": "^2.0.0",
    "@fastify/otel": "^0.5.0",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@mikro-orm/core": "^6.4.13",
    "@mikro-orm/mysql": "^6.4.13",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.200.0",
    "@opentelemetry/instrumentation-http": "^0.200.0",
    "@opentelemetry/instrumentation-mysql2": "^0.46.0",
    "@opentelemetry/instrumentation-undici": "^0.11.0",
    "@opentelemetry/resources": "^2.0.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@opentelemetry/sdk-trace-base": "^2.0.0",
    "@opentelemetry/sdk-trace-node": "^2.0.0",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "fastify": "^5.3.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.13",
    "@mikro-orm/migrations": "^6.4.13",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@sourcemeta/jsonschema": "^9.0.0",
    "@types/node": "22.13.4",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "dotenv": "^16.5.0",
    "eslint": "9.24.0",
    "fastify-tsconfig": "3.0.0",
    "json-schema-to-typescript": "15.0.4",
    "neostandard": "0.12.1",
    "rimraf": "6.0.1",
    "semantic-release": "^24.2.3",
    "tsx": "4.19.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.6.2+sha512.47870716bea1572b53df34ad8647b42962bc790ce2bf4562ba0f643237d7302a3d6a8ecef9e4bdfc01d23af1969aa90485d4cebb0b9638fa5ef1daef656f6c1b",
  "engines": {
    "node": ">=22"
  },
  "mikro-orm": {
    "alwaysAllowTs": true,
    "configPaths": [
      "./src/infrastructure/db/mikro-orm.config.ts",
      "./src/infrastructure/db/mikro-orm.config.js"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "protobufjs",
      "sqlite3"
    ],
    "overrides": {}
  }
}

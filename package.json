{
  "name": "create-ts-app",
  "version": "1.0.1",
  "private": true,
  "description": "",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/ademkoc/real-demo-app.git"
  },
  "license": "MIT",
  "author": "Adem KoÃ§",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prebuild": "pnpm lint && rimraf ./dist",
    "build": "tsc",
    "check-updates": "pnpm outdated --recursive --long",
    "start": "node --import=tsx --env-file=.env src/server.ts",
    "dev": "pnpm typecheck & pnpm lint & node --import=tsx --watch --watch-preserve-output --env-file=.env src/server.ts",
    "lint": "eslint && jsonschema lint ./schemas",
    "typecheck": "tsc --watch --preserveWatchOutput --noEmit",
    "generate-types": "node --import=tsx bin/generate-api-types.mjs",
    "lint:fix": "eslint --fix",
    "migration:create": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:create",
    "migration:down": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:down",
    "migration:up": "NODE_OPTIONS='--import=tsx -r dotenv/config' mikro-orm migration:up",
    "release": "semantic-release",
    "test": "node --import=tsx --test ./test/*.ts"
  },
  "release": {
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "breaking",
              "release": "major"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Chores"
              },
              {
                "type": "docs",
                "section": "Documentation"
              },
              {
                "type": "refactor",
                "section": "Refactors"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@adonisjs/health": "^2.0.0",
    "@fastify/otel": "^0.4.0",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@mikro-orm/core": "^6.4.7",
    "@mikro-orm/mysql": "^6.4.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/instrumentation-http": "^0.57.2",
    "@opentelemetry/instrumentation-mysql2": "^0.45.2",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.2",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.30.0",
    "fastify": "^5.2.1",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.8",
    "@mikro-orm/migrations": "^6.4.7",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@sourcemeta/jsonschema": "^6.0.3",
    "@types/node": "22.13.4",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "dotenv": "^16.4.7",
    "eslint": "9.21.0",
    "fastify-tsconfig": "3.0.0",
    "json-schema-to-typescript": "15.0.4",
    "neostandard": "0.12.1",
    "rimraf": "6.0.1",
    "semantic-release": "^24.2.3",
    "sql-formatter": "^15.4.11",
    "tsx": "4.19.3",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.5.2+sha512.da9dc28cd3ff40d0592188235ab25d3202add8a207afbedc682220e4a0029ffbff4562102b9e6e46b4e3f9e8bd53e6d05de48544b0c57d4b0179e22c76d1199b",
  "engines": {
    "node": ">=22"
  },
  "mikro-orm": {
    "alwaysAllowTs": true,
    "useTsNode": false,
    "configPaths": [
      "./src/infrastructure/db/mikro-orm.config.ts",
      "./src/infrastructure/db/mikro-orm.config.js"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "protobufjs",
      "sqlite3"
    ],
    "overrides": {}
  }
}
